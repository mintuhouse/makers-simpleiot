<p id="notice"><%= notice %></p>

<table class="table table-responsive">
  <tr>
    <th>Name</th>
    <td><%= @device.name %></td>
  </tr>
  <tr>
    <th>Secret</th>
    <td><%= @device.secret %></td>
  </tr>
  <tr>
    <th>Data</th>
    <td><%= @device.data %></td>
  </tr>
  <tr>
    <th>Get Data Url</th>
    <td>
      <% geturl = api_get_data_url(secret: @device.secret) %>
      <%= link_to geturl, geturl, target: "_blank" %>
    </td>
  </tr>
  <tr>
    <th>Set Data Url</th>
    <td>
      <%= seturl = api_set_data_url(secret: @device.secret, value: "new value") %>
      <br />(You need to send a POST request)
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_device_path(@device) %> |
<%= link_to 'Back', devices_path %>
